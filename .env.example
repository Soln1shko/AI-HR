# OpenRouter API ключ для доступа к AI-моделям
OPENROUTER_API_KEY="your_openrouter_api_key_here"

# MongoDB connection string
MONGO_URI="mongodb://username:password@host:port/database"

# URL сервиса AI HR
AI_HR_SERVICE_URL="http://moretech-ai-hr:8002"

# Секретный ключ Flask приложения
SECRET_KEY="your_flask_secret_key_here"

# Режим отладки Flask (1 - включено, 0 - выключено)
FLASK_DEBUG=1

# Yandex Cloud endpoint URL
YC_ENDPOINT_URL="https://storage.yandexcloud.net"

# Yandex Cloud bucket name
YC_STORAGE_BUCKET="your_bucket_name"

# Yandex Cloud Service Account секретный ключ
YC_SA_SECRET_KEY="your_yc_sa_secret_key"

# Yandex Cloud Service Account key ID
YC_SA_KEY_ID="your_yc_sa_key_id"

# Модель Whisper для распознавания речи (tiny, base, small, medium, large)
WHISPER_MODEL="medium"

# Yandex Cloud IAM токен (временный, обычно генерируется автоматически)
YC_IAM_TOKEN="your_yc_iam_token"

# Yandex Cloud folder ID
YC_FOLDER_ID="your_yc_folder_id"

# ID чата для Yandex Cloud Video
CHANNEL_ID="your_channel_id"

# HH OAuth client ID
HH_CLIENT_ID="your_hh_client_id"

# HH OAuth client secret
HH_CLIENT_SECRET="your_hh_client_secret"

# HH OAuth redirect URI
HH_REDIRECT_URI="https://yourdomain.com/hh-redirect"

# Секретный ключ приложения (дублирование, возможно для разных целей)
SECRET_KEY="your_application_secret_key"

# Access token работодателя HH
EMPLOYER_ACCESS_TOKEN="your_hh_employer_access_token"

# HTTP referer для OpenRouter
OPENROUTER_HTTP_REFERER="http://localhost"

# Название приложения для OpenRouter
OPENROUTER_TITLE="YourAppName"

# Cartesia API ключ
CARTESIA_API_KEY="your_cartesia_api_key"

# Fireworks AI API ключ
FIREWORKS_API_KEY="your_fireworks_api_key"